    {% set noLink = false %}
{% endif %}
<h4>
{% spaceless %}
{% if not noLink %}
    <a href="{{ path('mufilesmodule_collection_' ~ routeArea ~ 'display', {'id': item.getId()}) }}" title="{{ item|mufilesmodule_formattedTitle|e('html_attr') }}">
{% endif %}
    {{ item|mufilesmodule_formattedTitle }}
{% if not noLink %}
    </a>
    <a id="collectionItem{{ item.getKey() }}Display" href="{{ path('mufilesmodule_collection_' ~ routeArea ~ 'display', {'id': item.getId(), raw: 1}) }}" title="{{ __('Open quick view window') }}" class="mufiles-inline-window hidden" data-modal-title="{{ item|mufilesmodule_formattedTitle|e('html_attr') }}"><i class="fa fa-id-card-o"></i></a>
