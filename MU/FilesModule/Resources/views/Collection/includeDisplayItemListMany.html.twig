{# purpose of this template: inclusion template for display of related collections or hook assignments #}
{#
    You can use the context variable to check for the context of this list:
        - 'display': list of related collections included in a display template
        - 'hookDisplayView': list of collections assigned using an UI hook (display/view template)
        - 'hookDisplayEdit': list of collections assigned using an UI hook (edit template)
        - 'hookDisplayDelete': list of collections assigned using an UI hook (delete template)
#}
{% set hasAdminPermission = hasPermission('MUFilesModule:Collection:', '::', 'ACCESS_COMMENT') %}
{% set hasEditPermission = hasPermission('MUFilesModule:Collection:', '::', 'ACCESS_COMMENT') %}
{% if context != 'display' %}
    <h3>{{ __('Assigned collections') }}</h3>
    {{ pageAddAsset('stylesheet', zasset('@MUFilesModule:css/style.css')) }}
    {{ pageAddAsset('stylesheet', asset('jquery-ui/themes/base/jquery-ui.min.css')) }}
    {{ pageAddAsset('stylesheet', asset('bootstrap-jqueryui/bootstrap-jqueryui.min.css')) }}
    {{ pageAddAsset('javascript', asset('jquery-ui/jquery-ui.min.js')) }}
    {{ pageAddAsset('javascript', asset('bootstrap-jqueryui/bootstrap-jqueryui.min.js')) }}
    {{ pageAddAsset('javascript', zasset('@MUFilesModule:js/MUFilesModule.js'), 99) }}
    {% if context == 'hookDisplayView' and hasEditPermission %}
        {% set entityNameTranslated = __('collection') %}
        {{ pageAddAsset('javascript', zasset('@MUFilesModule:js/MUFilesModule.HookAssignment.js'), 99) }}
        {{ pageAddAsset('javascript', zasset('@MUFilesModule:js/MUFilesModule.InlineEditing.js'), 99) }}
        {{ pageAddAsset('javascript', zasset('@MUFilesModule:js/MUFilesModule.AutoCompletion.js'), 99) }}
    {% endif %}
{% endif %}
{% if noLink is not defined %}
    {% set noLink = false %}
{% endif %}
{% if items|default and items|length > 0 %}
<ul class="list-group mufilesmodule-related-item-list collection">
{% for item in items %}
    {% if hasAdminPermission or item.workflowState == 'approved' %}
    <li class="list-group-item">
<h4 class="list-group-item-heading">
{% spaceless %}
{% if not noLink %}
    <a href="{{ path('mufilesmodule_collection_' ~ routeArea ~ 'display', {'id': item.getId()}) }}" title="{{ item|mufilesmodule_formattedTitle|e('html_attr') }}">
{% endif %}
    {{ item|mufilesmodule_formattedTitle }}
{% if not noLink %}
    </a>
    <a id="collectionItem{{ item.getKey() }}Display" href="{{ path('mufilesmodule_collection_' ~ routeArea ~ 'display', {'id': item.getId(), raw: 1}) }}" title="{{ __('Open quick view window') }}" class="mufiles-inline-window hidden" data-modal-title="{{ item|mufilesmodule_formattedTitle|e('html_attr') }}"><span class="fa fa-id-card-o"></span></a>
{% endif %}
{% endspaceless %}
</h4>
{% if context == 'hookDisplayView' and hasEditPermission %}
    {% set assignmentId = '' %}
    {% for assignment in assignments if assignment.getAssignedId() == item.getKey() %}
        {% set assignmentId = assignment.getId() %}
    {% endfor %}
    <p class="list-group-item-text">
        <a href="javascript:void(0);" title="{{ __f('Detach this %name%', {'%name%': entityNameTranslated})|e('html_attr') }}" class="detach-mufilesmodule-object hidden" data-assignment-id="{{ assignmentId|e('html_attr') }}"><i class="fa fa-chain-broken"></i> {{ __f('Detach %name%', {'%name%': entityNameTranslated}) }}</a>
    </p>
{% endif %}
    </li>
    {% endif %}
{% endfor %}
</ul>
{% endif %}
{% if context == 'hookDisplayView' and hasEditPermission %}
    {% set idPrefix = 'hookAssignmentCollection' %}
    {% set addLinkText = __f('Attach %name%', {'%name%': entityNameTranslated}) %}
    <div id="{{ idPrefix }}LiveSearch" class="mufilesmodule-add-hook-assignment">
        <a id="{{ idPrefix }}AddLink" href="javascript:void(0);" title="{{ addLinkText|e('html_attr') }}" class="attach-mufilesmodule-object hidden" data-owner="{{ subscriberOwner|e('html_attr') }}" data-area-id="{{ subscriberAreaId|e('html_attr') }}" data-object-id="{{ subscriberObjectId|e('html_attr') }}" data-url="{{ subscriberUrl|e('html_attr') }}" data-assigned-entity="collection"><i class="fa fa-link"></i> {{ addLinkText }}</a>
        <div id="{{ idPrefix }}AddFields" class="mufilesmodule-autocomplete">
            <label for="{{ idPrefix }}Selector">{{ __f('Find %name%', {'%name%': entityNameTranslated}) }}</label>
            <br />
            <i class="fa fa-search" title="{{ __f('Search %name%', {'%name%': entityNameTranslated})|e('html_attr') }}"></i>
            <input type="hidden" name="{{ idPrefix }}" id="{{ idPrefix }}" value="{% for assignment in assignments %}{% if not loop.first %},{% endif %}{{ assignment.getAssignedId() }}{% endfor %}" />
            <input type="hidden" name="{{ idPrefix }}Multiple" id="{{ idPrefix }}Multiple" value="0" />
            <input type="text" id="{{ idPrefix }}Selector" name="{{ idPrefix }}Selector" autocomplete="off" />
            <input type="button" id="{{ idPrefix }}SelectorDoCancel" name="{{ idPrefix }}SelectorDoCancel" value="{{ __('Cancel') }}" class="btn btn-default mufilesmodule-inline-button" />
            <a id="{{ idPrefix }}SelectorDoNew" href="{{ path('mufilesmodule_collection_' ~ routeArea ~ 'edit') }}" title="{{ __f('Create new %name%', {'%name%': entityNameTranslated}) }}" class="btn btn-default mufilesmodule-inline-button"><i class="fa fa-plus"></i> {{ __('Create') }}</a>
            <noscript><p>{{ __('This function requires JavaScript activated!') }}</p></noscript>
        </div>
    </div>
    {% set assignmentInitScript %}
        <script type="text/javascript">
        /* <![CDATA[ */
            var mUFilesInlineEditHandlers = [];
            var mUFilesEditHandler = {
                alias: '{{ idPrefix }}',
                prefix: '{{ idPrefix }}SelectorDoNew',
                moduleName: 'MUFilesModule',
                objectType: 'collection',
                inputType: 'autocomplete',
                windowInstanceId: null
            };
            mUFilesInlineEditHandlers.push(mUFilesEditHandler);

            mUFilesInitRelationHandling('collection', '{{ idPrefix }}', '{{ idPrefix }}SelectorDoNew', true, 'autocomplete', '{{ path('mufilesmodule_collection_' ~ routeArea ~ 'edit') }}');
        /* ]]> */
        </script>
    {% endset %}
    {{ pageAddAsset('footer', assignmentInitScript) }}
{% endif %}
